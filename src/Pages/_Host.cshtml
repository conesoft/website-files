@page "/"
@namespace Conesoft.Website.Files
@using Microsoft.AspNetCore.Components.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8">
    <base href="~/">
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <style>
        body:has([fullscreen-viewer]) *:not([fullscreen-viewer]) {
            display: none;
        }

        html:has([fullscreen-viewer]) {
            scrollbar-gutter: auto;
        }

        body:has([fullscreen-viewer]) {
            grid-template-rows: initial;
            grid-template: "fullscreen-viewer";
            height: 100%;
            place-items: stretch;
            margin-top: 0px;
        }

        [fullscreen-viewer] {
            grid-area: fullscreen-viewer;
            width: 100cqw;
            height: 100cqh;
        }

        @@media only screen and (max-aspect-ratio: 1) {
            section[data-authorized=true] {
                bottom: 5.5rem !important;
            }
        }
    </style>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />
    <script src="_framework/blazor.server.js"></script>
    <div id="components-reconnect-modal" style="display:none;"></div>
</body>
</html>